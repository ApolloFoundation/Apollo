<!-- We have following profiles: prod, dev, debug
     1. prod: profile for production network with appropriate resources
     2. dev:  profile for development, contains resources for man testnet
         Default profile:  debug
         Resources for profiles:
             dev:  resources-dev
             prod: resources-prod
             debug: the same as dev but without zip assembly
-->
    <profiles>
        <!-- The Configuration of the development profile -->
        <profile>
            <id>dev</id>
            <activation>
                <property>
                    <name>develop</name>
                </property>
            </activation>
            <properties>
                <zipExecutionPhase>package</zipExecutionPhase>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>src/main/resources-dev</directory>
                    </resource>
                </resources>
            </build>
        </profile>
        <!-- The Configuration of the debug profile -->
        <profile>
            <id>debug</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <zipExecutionPhase>none</zipExecutionPhase>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>src/main/resources-dev</directory>
                    </resource>
                </resources>
            </build>
        </profile>
        <!-- The Configuration of the production profile -->
        <profile>
            <id>prod</id>
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>
            <properties>
                <zipExecutionPhase>package</zipExecutionPhase>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>src/main/resources-prod</directory>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>

