<configuration scan="true" scanPeriod="60 seconds">
  <property resource="test-env.properties"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M\(%line\) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="ERROR">
    <appender-ref ref="STDOUT"/>
  </root>
  <logger name="org.jboss" level="ERROR" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="ch.qos.logback" level="ERROR" additivity="false">
    <appender-ref ref="STDOUT"/>
  </logger>

  <if condition='property("apl-test.env").equals("quiet")'>
    <then>
      <logger name="com.apollocurrency.aplwallet.apl" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
      </logger>

      <logger name="com.apollocurrency.aplwallet.apl.updater.downloader.DownloaderImpl" level="off">
        <appender-ref ref="STDOUT"/>
      </logger>
      <logger name="com.apollocurrency.aplwallet.apl.updater.AuthorityCheckerImpl" level="off">
        <appender-ref ref="STDOUT"/>
      </logger>
    </then>
    <else>
      <logger name="com.apollocurrency.aplwallet.apl" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
      </logger>
    </else>
  </if>

</configuration>
